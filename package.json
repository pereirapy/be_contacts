{
  "name": "backend",
  "version": "3.2.1",
  "description": "Backend for Contacts project",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --config nodemon_prod.json src/index.js --exec ts-node-dev  --no-deps --respawn --transpileOnly | pino-pretty",
    "dev": "nodemon src/index.js --exec ts-node-dev --no-deps --respawn --transpileOnly",
    "db:migrate": "./node_modules/.bin/knex migrate:latest",
    "db:migrate-test": "cross-env NODE_ENV=test ./node_modules/.bin/knex migrate:latest",
    "db:seed": "./node_modules/.bin/knex seed:run",
    "db:add": "./node_modules/.bin/knex migrate:make",
    "db:down": "./node_modules/.bin/knex migrate:down",
    "db:reset": "npm run db:down && npm run db:migrate && npm run db:seed",
    "db:up": "./node_modules/.bin/knex migrate:up",
    "test": "cross-env NODE_ENV=test node ./node_modules/jest/bin/jest.js --forceExit --detectOpenHandles --runInBand",
    "test:watch": "cross-env NODE_ENV=test node ./node_modules/jest/bin/jest.js --watch --detectOpenHandles --runInBand",
    "lint": "npm run lint:eslint && npm run lint:format",
    "lint:eslint": "eslint . --ext .js,.jsx --fix",
    "lint:format": "prettier --config .prettierrc 'src/**/*.js'  --check",
    "format": "prettier --config .prettierrc \"./src/**/*.js\" --write",
    "heroku-postbuild": "node_modules/.bin/knex migrate:latest"
  },
  "keywords": [],
  "author": "",
  "engines": {
    "node": "^14.x",
    "npm": "^8.x"
  },
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@getvim/execute": "^1.0.0",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.179",
    "@types/node": "^16.11.26",
    "aes-js": "^3.1.2",
    "axios": "^0.21.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "express": "^4.17.3",
    "express-graphql": "^0.12.0",
    "graphql": "^15.5.3",
    "graphql-scalars": "^1.15.0",
    "graphql-tools": "^8.2.0",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.18.4",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "nodemon": "^2.0.12",
    "omit-deep-lodash": "^1.1.5",
    "pg": "^8.7.3",
    "pino-pretty": "^7.5.3",
    "pipeawait": "^1.0.0",
    "simple-node-logger": "^21.8.12",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@babel/register": "^7.17.0",
    "@types/pg": "^8.6.5",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "babel-jest": "^27.5.1",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^27.5.1",
    "jest-extended": "^1.2.1",
    "knex-cleaner": "^1.3.1",
    "prettier": "^2.5.1",
    "prettier-eslint": "^8.8.2",
    "ts-jest": "^27.1.3"
  },
  "majestic": {
    "args": [
      "--runInBand"
    ]
  }
}
